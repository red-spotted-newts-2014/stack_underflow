<%= form_for @question do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= label_tag :tags %>
    <%= text_field_tag :tags %><br>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>